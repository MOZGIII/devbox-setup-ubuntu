#!/bin/bash
cd "$(dirname "${BASH_SOURCE[0]}")"
source ../lib/devbox-setup-utils.sh
devbox-setup-init

require-root
require-non-root-user

log "Changing window drag hotkey with gsettings for $NON_ROOT_USER"
GSETTINGS_COMMAND="$(cat <<-COMMANDEOF
  gsettings set org.gnome.desktop.wm.preferences mouse-button-modifier "<Alt><Super>"
COMMANDEOF
)"
run_command_as_user "$NON_ROOT_USER" "$GSETTINGS_COMMAND"
