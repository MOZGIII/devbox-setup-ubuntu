#!/bin/bash
cd "$(dirname "${BASH_SOURCE[0]}")"
source ../lib/devbox-setup-utils.sh
devbox-setup-init

require-root

log 'Adding git-lfs repo and updating package list'
curl -Ss https://packagecloud.io/install/repositories/github/git-lfs/script.deb.sh | bash

log 'Installing git-lfs'
package-install-from-repos git-lfs
